[user]
  name = Zac Joffe
  email = zacharyjoffe@gmail.com
[core]
  editor = "nvim"
	eol = lf
	autocrlf = false
[mergetool]
  prompt = false
[merge]
  tool = nvimdiff
[mergetool "vimdiff"]
  #cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[difftool]
  prompt = false
  trustExitCode = true # abort diffs with `:cq` or `:cquit`
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[pull]
  rebase = false
[init]
  defaultBranch = master
