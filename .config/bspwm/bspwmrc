#! /bin/sh

sxhkd &

bspc monitor HDMI-0 -d I
bspc monitor DP-4 -d II
bspc monitor DP-0 -d II IV V VI VII VIII IX
bspc monitor DP-2 -d X

bspc config border_width         0
bspc config window_gap          12

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^3'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a Steam desktop='^4' follow=off
bspc rule -a discord desktop='^10'
bspc rule -a Deluge desktop='^1'
bspc rule -a Zathura state=tiled

# wallpaper with feh
feh --randomize --bg-fill ~/Wallpapers/Landscapes/*

# autostart stuff 
redshift &
dunst &
compton -b
~/.config/polybar/launch.sh
